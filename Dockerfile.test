# Dockerfile for testing environment
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies and uv
RUN apt-get update && apt-get install -y \
    openssh-client \
    git \
    curl \
    make \
    # For building Python packages with C extensions
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | sh

# Create virtual environment with uv
RUN /root/.cargo/bin/uv venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy requirements first for better caching
COPY requirements.txt requirements-dev.txt ./
RUN /root/.cargo/bin/uv pip install -r requirements-dev.txt

# Copy test files and source code
COPY . .

# Install the application in editable mode
RUN /root/.cargo/bin/uv pip install -e .

# Set environment variables for testing
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTEST_ADDOPTS="--color=yes"
ENV MOCK_PROXMOX=true

# Run tests by default
CMD ["pytest", "-v", "--cov=src", "--cov-report=term-missing"]